<table>
  <tr>
    <th>Name</th>
    <th>Time to end</th>
    <th>Type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @auctions.each do |auction| %>
  <tr>
    <td><%=link_to auction.pretty_name, auction %></td>
    <td><%= distance_of_time_in_words(Time.now, auction.end_at, :include_seconds=>true) %></td>
    <td><%= auction.type %></td>

    <td><%= link_to 'Edit', edit_auction_path(auction) %></td>
    <td><%= link_to 'Destroy', auction, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>